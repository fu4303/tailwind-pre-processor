$antialiased = 'antialiased'
$subpixel-antialiased = 'subpixel-antialiased'
  
antialiased()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

subpixel-antialiased()
  -webkit-font-smoothing auto
  -moz-osx-font-smoothing auto

.{$antialiased}
  antialiased()

.{$subpixel-antialiased}
  subpixel-antialiased()

for size, width in $screens
  $width = unquote(width)
  $selector-antialiased = join('\:', size, $antialiased)
  $selector-subpixel-antialiased = join('\:', size, $subpixel-antialiased)

  @media (min-width: $width)
    .{$selector-antialiased}
      antialiased()

    .{$selector-subpixel-antialiased}
      subpixel-antialiased()
