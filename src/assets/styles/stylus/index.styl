// batch import function
$import($size = null) {
  for $property, $variant in $properties {
    if ($size is not null) {
      class-generator($property, unquote($size))
    } else {
      p($property)
      class-generator($property, null)
    }
  }
}

// generate basic class
$import()
p(length($properties))

// loop the responsive variant
for $size, $width in $theme.screens {
  @media (min-width: $width) {
    $import($size)
  }
}